@model EmprestimoLivros.DATA.Models.Livro

<h4>Incluir novo Livro</h4>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index"> <i class="fa fa-arrow-circle-left"></i> Voltar</a>
</div>
<br />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div class="card">
                <div class="card-header">Informações do livro</div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md">
                            <label asp-for="LivroNome" class="control-label"></label>
                            <input asp-for="LivroNome" class="form-control" />
                            <span asp-validation-for="LivroNome" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md">
                            <label asp-for="LivroAutor" class="control-label"></label>
                            <input asp-for="LivroAutor" class="form-control" />
                            <span asp-validation-for="LivroAutor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md">
                            <label asp-for="LivroEditora" class="control-label"></label>
                            <input asp-for="LivroEditora" class="form-control" />
                            <span asp-validation-for="LivroEditora" class="text-danger"></span>
                        </div>
                        <div hidden class="form-group col-md">
                            <label asp-for="LivroAnoPublicacao" class="control-label"></label>
                            <input id="anoPublicacaoAsp" asp-for="LivroAnoPublicacao" class="form-control" />
                            <span asp-validation-for="LivroAnoPublicacao" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label">Ano de publicação</label>
                            <select id="anoPublicacao" onchange="setDataPublicacao()" class="form-control">
                                <option value="AnoNaoSelecionado">Selecione um ano</option>
                                @for (int x = DateTime.Now.Year; x >= 1500; x--)
                                {
                                    <option value="@x">@x</option>
                                }
                            </select>
                            <span asp-validation-for="LivroAnoPublicacao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="LivroEdicao" class="control-label"></label>
                            <input asp-for="LivroEdicao" class="form-control" />
                            <span asp-validation-for="LivroEdicao" class="text-danger"></span>
                        </div>
                        
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Incluir" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{ 
    <script>
        function setDataPublicacao() {
            document.getElementById('anoPublicacaoAsp').value = document.getElementById('anoPublicacao').value + '-01-01T00:00' ;
        }
    </script>
}